pub(crate) FunctionDef: ast::functions::FunctionDef = {
  <lo:@L> <is_pub:"pub"?> "fn" <name:Ident> <generic_params:GenericParams?> "(" <params:Comma<Param>> ")" <ret_type:FunctionRetType?> "{"
